    <TextView
        android:id="@+id/userID"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="사용자 이메일"
        android:textSize="25sp"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:layout_marginTop="70dp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="반갑습니다!"
        android:textSize="15sp"
        android:layout_marginTop="10dp"/>
    <LinearLayout
        android:layout_width="352dp"
        android:layout_height="wrap_content"
        android:id="@+id/settings_review_list"
        android:gravity="center"
        android:orientation="horizontal"
        android:layout_marginTop="55dp">
        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="50dp"
            android:text="사용자 작성 리뷰"
            android:textSize="18sp"
            android:paddingLeft="20dp"
            android:gravity="center_vertical"/>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_arrow"
            android:layout_gravity="end|center_vertical"
            android:paddingRight="17dp"/>
    </LinearLayout>

    <View
        android:layout_width="352dp"
        android:layout_height="1dp"
        android:background="#A1AEBF"
        android:layout_marginTop="6dp"
        android:layout_marginBottom="6dp"/>
    <TextView
        android:layout_width="352dp"
        android:layout_height="50dp"
        android:id="@+id/settings_logout"
        android:text="로그아웃"
        android:textSize="18sp"
        android:paddingLeft="20dp"
        android:gravity="center_vertical"/>
    <LinearLayout
        android:layout_width="352dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal">
        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="50dp"
            android:text="자동 로그인"
            android:textSize="18sp"
            android:paddingLeft="20dp"
            android:gravity="center_vertical"/>
        <ImageView
            android:id="@+id/settings_auto_login"
            android:layout_width="62dp"
            android:layout_height="30dp"
            android:src="@drawable/toggle_on"
            android:layout_gravity="end|center_vertical"
            android:paddingRight="10dp"/>
    </LinearLayout>

    <View
        android:layout_width="352dp"
        android:layout_height="1dp"
        android:background="#A1AEBF"
        android:layout_marginTop="6dp"
        android:layout_marginBottom="6dp"/>

    <TextView
        android:layout_width="352dp"
        android:layout_height="50dp"
        android:id="@+id/settings_agreement"
        android:text="이용약관"
        android:textSize="18sp"
        android:paddingLeft="20dp"
        android:gravity="center_vertical"/>
    <TextView
        android:layout_width="352dp"
        android:layout_height="50dp"
        android:id="@+id/settings_privacy"
        android:text="개인정보 처리방침"
        android:textSize="18sp"
        android:paddingLeft="20dp"
        android:gravity="center_vertical"/>
    <TextView
        android:layout_width="352dp"
        android:layout_height="50dp"
        android:id="@+id/settings_developer"
        android:text="개발자 contact"
        android:textSize="18sp"
        android:paddingLeft="20dp"
        android:gravity="center_vertical"/>
    <TextView
        android:layout_width="352dp"
        android:layout_height="50dp"
        android:id="@+id/settings_opensource_license"
        android:text="Opensource License"
        android:textSize="18sp"
        android:paddingLeft="20dp"
        android:gravity="center_vertical"/>

    <View
        android:layout_width="352dp"
        android:layout_height="1dp"
        android:background="#A1AEBF"
        android:layout_marginTop="6dp"
        android:layout_marginBottom="6dp"/>
    <TextView
        android:layout_width="352dp"
        android:layout_height="50dp"
        android:id="@+id/settings_withdrawal"
        android:text="회원탈퇴"
        android:textSize="18sp"
        android:paddingLeft="20dp"
        android:gravity="center_vertical"/>

</LinearLayout>
