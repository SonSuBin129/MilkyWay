<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".review.secondReviewFragment">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:text="수유실 이름"
        android:textSize="23sp"
        android:textStyle="bold"
        android:layout_marginTop="80dp"/>

    <RatingBar
        android:id="@+id/ratingbar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:isIndicator="false"
        tools:ignore="SpeakableTextPresentCheck"
        android:layout_marginTop="130dp"/>

    <TextView
        android:id="@+id/rating_text"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="185dp"
        android:layout_gravity="center_horizontal"
        android:gravity="center"
        android:textColor="#3D3D3D"
        android:textSize="15sp"/>

    <androidx.cardview.widget.CardView
        android:id="@+id/photo_insert"
        android:layout_width="320dp"
        android:layout_height="45dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="230dp"
        android:clickable="true"
        android:foreground="?android:attr/selectableItemBackground"
        app:cardBackgroundColor="#FBFBFB"
        app:cardCornerRadius="8dp"
        tools:ignore="TouchTargetSizeCheck">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center_horizontal"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:src="@drawable/baseline_photo_camera_24" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="사진 첨부하기"
                android:textSize="16sp" />
        </LinearLayout>

    </androidx.cardview.widget.CardView>


    <androidx.cardview.widget.CardView
        android:id="@+id/review_contents"
        android:layout_width="320dp"
        android:layout_height="300dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="310dp"
        app:cardBackgroundColor="#FBFBFB"
        app:cardCornerRadius="8dp"
        tools:ignore="DuplicateClickableBoundsCheck">

        <EditText
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center_horizontal"
            android:background="@null"
            android:gravity="center"
            android:textSize="15sp"
            android:foreground="?android:attr/selectableItemBackground"
            android:hint="수유실 시설/환경/위치에 관한 리뷰" />
    </androidx.cardview.widget.CardView>


    <Button
        android:id="@+id/completion"
        android:layout_width="320dp"
        android:layout_height="48dp"
        android:text="완료"
        android:textStyle="bold"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="640dp"/>
</FrameLayout>